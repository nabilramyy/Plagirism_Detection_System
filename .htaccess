# Apache Configuration for Plagiarism Detection System
# This file enables clean URLs and proper routing

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Don't rewrite requests for existing files or directories
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Don't rewrite requests for static assets
    RewriteCond %{REQUEST_URI} !\.(css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot|pdf|docx|html)$ [NC]
    
    # Don't rewrite requests for ajax directory (direct access needed)
    RewriteCond %{REQUEST_URI} !^/ajax/
    
    # Don't rewrite requests for app directory files (controllers, etc.)
    # Allow direct access to controllers and other app files
    RewriteCond %{REQUEST_URI} !^/app/
    
    # Don't rewrite requests for includes directory
    RewriteCond %{REQUEST_URI} !^/includes/
    
    # Don't rewrite requests for assets directory
    RewriteCond %{REQUEST_URI} !^/assets/
    
    # Don't rewrite requests for vendor directory
    RewriteCond %{REQUEST_URI} !^/vendor/
    
    # Don't rewrite requests for ml directory
    RewriteCond %{REQUEST_URI} !^/ml/
    
    # Don't rewrite requests for storage directory
    RewriteCond %{REQUEST_URI} !^/storage/
    
    # Don't rewrite requests for tests directory
    RewriteCond %{REQUEST_URI} !^/tests/
    
    # Route everything else through index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Security: Prevent direct access to sensitive files
<FilesMatch "\.(env|log|ini|conf|bak|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Set default charset
AddDefaultCharset UTF-8

# Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

